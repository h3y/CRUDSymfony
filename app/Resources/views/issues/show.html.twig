{% extends 'base.html.twig' %}

{% block body %}
    <h1>Issue</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ issue.id }}</td>
            </tr>
            <tr>
                <th>Idis</th>
                <td>{{ issue.idIs }}</td>
            </tr>
            <tr>
                <th>Datepost</th>
                <td>{% if issue.datePost %}{{ issue.datePost|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ issue.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ issue.text }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('issues_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('issues_edit', { 'id': issue.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
